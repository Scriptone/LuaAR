{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Lua AR",
	"version": "0.1.0",
	"identifier": "com.tauri.ar",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm generate"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "Lua Application Readers Copilot",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/128x128.png", "icons/icon.ico", "src/assets"]
	}
}
